        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": true
    },
    "top": {
      "type": "boolean",
      "default": false
    },
    "images": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": true
    },
    "categories": {
      "collection": "category",
      "via": "projects"
    },
    "order": {
      "type": "integer"
    },
    "visible": {
      "type": "boolean",
      "required": true
    },
    "short_description": {
      "type": "string",
      "required": true
    }
